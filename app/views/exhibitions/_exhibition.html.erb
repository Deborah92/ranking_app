<%= content_tag_for :tr, exhibition do %>
    <td><%= exhibition.name %></td>
    <td><%= link_to("Show", exhibition) %></td>
    <td><%= link_to("Edit", edit_exhibition_path(exhibition)) %></td>
    <td><%= link_to("Delete", exhibition, method: :delete, data: {confirm: 'Are you sure you want to delete this exhibition'} ) %></td>
<% end %>