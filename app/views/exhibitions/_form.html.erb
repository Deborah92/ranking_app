<% content_for :head do %>
    <%= javascript_include_tag 'exhibitions', "data-turbolinks-track" => false  %>
<%end%>

<%= form_for @exhibition do |f| %>
    <% @exhibition.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :date %>
      <%= f.text_field :date, "id" => "datepicker", :value => (@exhibition.date.blank? ? 'dd/mm/yyyy' :@exhibition.date.strftime('%d/%m/%Y')) %>
    </p>
    <p>
      <%= f.label :type %>
      <%= f.select :type, [['MONOGRÁFICA NACIONAL'],['CONCURSO MONOGRÁFICO NACIONAL O REGIONAL'],['Especial A.E.F.R.B.F.'],
                           ['Punto Obligatorio'],['EXPOSICIÓN INTERNACIONAL'],['EXPOSICION NACIONAL']], prompt: 'Type...'  %>
    </p>
    <%= f.submit %>
<% end %>