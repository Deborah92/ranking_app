<% content_for :head do %>
    <%= javascript_include_tag "filter", "data-turbolinks-track" => false %>
<%end%>

<h2 class="title">Dogs' census of the "Asociación Española para el Fomento de la Raza Bulldog Francés"</h2>

<div class="input-group search"> <span class="input-group-addon">Search</span>
  <input id="filter" type="text" class="form-control" placeholder="Type here...">
</div>

<table class="table table-hover table-striped">
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <% if user_signed_in? %>
      <th>Owner</th>
    <% end %>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <tbody class="searchable">
    <%= render @dogs %>
  </tbody>
</table><br>

<% if can? :new, Dog  %>
  <%= link_to "New Dog", new_dog_path, class: "glyphicon glyphicon-plus link" %>
<% end %>