<div id="formularioAdmin">
<%= form_for @result, html: {multipart: true, "data-ajax" => "false", class: "form"} do |f|%>
    <div  class="alert alert-error">
        <% @result.errors.full_messages.each do |message| %>
            <p><%= message %></p>
        <% end %>
    </div>

    <div class="form-group">
      <%= f.label :exhibition_id, class: "control-label" %>
      <%= f.collection_select :exhibition_id, Exhibition.all, :id, :name,{prompt: 'exhibition...', :selected =>@selected}, {class: "form-control", style: "width:20%;", id:"exhibition", onchange: 'showAward()'} %>
    </div>
    <div id="awards" class="form-group">
      <%= f.label :award_id, class: "control-label" %>
      <%= f.collection_select :award_id, Award.where(id: @points), :id, :award, {prompt: 'Awards...', :selected =>@selectedAward}, {class: "form-control", style: "width:20%;"} %>
    </div>
    <div class="form-group">
      <%= f.label :dog_id, class: "control-label" %>
      <%= f.collection_select :dog_id, Dog.all, :id, :name, {prompt: 'dog...', :selected =>@selectedDog}, {class: "form-control", style: "width:20%;"} %>
    </div>
    <div class="form-group">
      <%= f.label :status, class: "control-label" %>
      <%= f.select :status, ['Pending','Validated', 'Rejected'], {prompt: 'Status...'},{class: "form-control", style: "width:19%;"}  %>
    </div>
    <%= f.submit :class => "btn btn-primary" %>
<% end %>
</div>
